---
import Base from "../layouts/Base.astro";
import Breadcrumb from "../layouts/components/Breadcrumb.astro";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("contact", "index");
const contact = entry.data;
---

<Base
  title={contact.title}
  meta_title={contact.meta_title}
  description={contact.description}
  image={contact.image}
>
  <Breadcrumb title={contact.title} />
  
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        <!-- Map and Info -->
        <div class="space-y-8">
          <div class="rounded-lg overflow-hidden shadow-lg p-8">
            <h2 class="text-3xl font-bold mb-6">Hubungi Kami</h2>
            <form id="contact-form" class="space-y-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2" for="name">
                  Nama
                </label>
                <input
                  type="text"
                  id="name"
                  placeholder="Ketik nama..."
                  name="name"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2" for="message">
                  Pesan
                </label>
                <textarea
                  id="message"
                  name="message"
                  placeholder="Ketik pesan..."
                  rows="4"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                  required
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-primary text-white py-3 px-6 rounded-md hover:bg-opacity-90 transition-colors"
              >
                Kirim Pesan via WhatsApp
              </button>
            </form>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-2xl font-bold mb-4">Informasi Kontak</h3>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold">Alamat:</h4>
                <p>Jl. Parit H. Husin 2, Bangka Belitung Darat, Kec. Pontianak Tenggara, Kota Pontianak</p>
              </div>
              <div>
                <h4 class="font-semibold">Telepon:</h4>
                <p>+62 895-1547-9966</p>
              </div>
              <div>
                <h4 class="font-semibold">Jam Operasional:</h4>
                <p>Senin - Sabtu: 08:00 - 17:00</p>
                <p>Minggu: Tutup</p>
              </div>
            </div>
          </div>
        </div>
        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-lg">
          <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3989.8177440344325!2d109.29169957458531!3d-0.03079559996889318!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e1d59d0a2680261%3A0x293552356b73450c!2sBengkel%20Las%20Daud%20Welder%20Pontianak!5e0!3m2!1sid!2sid!4v1732726675864!5m2!1sid!2sid"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
        </div>

      </div>
    </div>
  </section>
</Base>

<script>
document.getElementById('contact-form')?.addEventListener('submit', function(e) {
  e.preventDefault();
  
  const name = (document.getElementById('name') as HTMLInputElement).value;
  const message = (document.getElementById('message') as HTMLTextAreaElement).value;
  
  // Format the WhatsApp message
  const whatsappMessage = `Nama: ${name}%0APesan: ${message}`;
  
  // WhatsApp API URL with your phone number
  const whatsappUrl = `https://wa.me/62895154799666?text=${whatsappMessage}`;
  
  // Open WhatsApp in a new tab
  window.open(whatsappUrl, '_blank');
});
</script>
